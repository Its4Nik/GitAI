{
  "name": "gitai",
  "version": "1.0.0",
  "main": "dist/cli.js",
  "module": "src/cli.ts",
  "license": "MIT",
  "keywords": [
    "git",
    "commit",
    "ai",
    "changelog",
    "version",
    "cli",
    "selfhost"
  ],
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "author": {
    "name": "Its4Nik",
    "email": "info@itsnik.de"
  },
  "type": "module",
  "scripts": {
    "build": "bun build ./src/cli.ts --outfile ./dist/cli.js --production --target=bun --minify",
    "lint": "biome check --formatter-enabled=true --linter-enabled=true --organize-imports-enabled=true --fix src",
    "publish": "bun build && "
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "commander": "^14.0.0",
    "inquirer": "^12.6.3",
    "ollama": "^0.5.16"
  }
}
